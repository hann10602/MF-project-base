{
    "extends": ["react-app", "prettier"],
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "avoid",
                "semi": true,
                "trailingComma": "",
                "endOfLine": "lf",
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "printWidth": 120,
                "jsxSingleQuote": false
            }
        ]
    }
}
